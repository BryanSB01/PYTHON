numeros = []
pares = []
impares = []
for i in range(1, 8):
    num = int(input(f"Digite {i}o. valor: "))
    if num % 2 == 0:
        pares.append(num)
    elif num % 2 == 1:
        impares.append(num)
     
numeros.append(pares[:])
numeros.append(impares[:])

print(f"Os números pares digitados foram: {pares.sort()}")
print(f"Os números impares digitados foram: {impares.sort()}")